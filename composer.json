{
	"name": "21torr/hosting",
	"description": "Base bundle for hosting any Symfony-based application.",
	"license": "MIT",
	"type": "symfony-bundle",
	"authors": [
		{
			"name": "21TORR",
			"homepage": "https://www.21torr.com/"
		}
	],
	"homepage": "https://github.com/21TORR/hosting-bundle",
	"require": {
		"php": ">= 8.1",
		"ext-ctype": "*",
		"ext-intl": "*",
		"ext-json": "*",
		"ext-mbstring": "*",
		"21torr/bundle-helpers": "^2.1",
		"21torr/cli": "^1.0.3",
		"psr/log": "^3.0",
		"symfony/cache-contracts": "^3.0",
		"symfony/config": "^6.1",
		"symfony/console": "^6.1",
		"symfony/dependency-injection": "^6.1",
		"symfony/filesystem": "^6.1",
		"symfony/process": "^6.1"
	},
	"require-dev": {
		"bamarni/composer-bin-plugin": "^1.8.1",
		"phpunit/phpunit": "^9.5",
		"roave/security-advisories": "dev-latest",
		"symfony/phpunit-bridge": "^6.1"
	},
	"replace": {
		"symfony/polyfill-ctype": "*",
		"symfony/polyfill-iconv": "*",
		"symfony/polyfill-intl-grapheme": "*",
		"symfony/polyfill-intl-icu": "*",
		"symfony/polyfill-intl-idn": "*",
		"symfony/polyfill-intl-messageformatter": "*",
		"symfony/polyfill-intl-normalizer": "*",
		"symfony/polyfill-mbstring": "*",
		"symfony/polyfill-php70": "*",
		"symfony/polyfill-php71": "*",
		"symfony/polyfill-php72": "*",
		"symfony/polyfill-php73": "*",
		"symfony/polyfill-php74": "*",
		"symfony/polyfill-php80": "*",
		"symfony/polyfill-php81": "*"
	},
	"autoload": {
		"psr-4": {
			"Torr\\Hosting\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Torr\\Hosting\\": "tests/"
		}
	},
	"config": {
		"allow-plugins": {
			"bamarni/composer-bin-plugin": true
		},
		"sort-packages": true
	},
	"extra": {
		"branch-alias": {
			"dev-next": "1.x-dev"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"@composer bin all install --ansi"
		],
		"post-update-cmd": [
			"@composer bin all update --ansi"
		],
		"lint": [
			"@composer bin c-norm normalize \"$(pwd)/composer.json\"  --indent-style tab --indent-size 1 --dry-run --ansi",
			"php-cs-fixer fix --diff --config vendor-bin/cs-fixer/vendor/21torr/php-cs-fixer/.php-cs-fixer.dist.php --dry-run --no-interaction --ansi"
		],
		"test": [
			"phpunit",
			"phpstan analyze -c phpstan.neon . --ansi"
		]
	}
}
